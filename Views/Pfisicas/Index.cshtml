@model IEnumerable<Estacionamento.Models.Pfisica>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background: #a7a6a6;
    }

    .itens {
        background: #ffffff;
        text-align: center;
        border-radius: 5px 5px 5px 5px;
        margin: 5px;
    }
    #create {
        background: #ffffff;
        text-align: center;
        border-radius: 5px 5px 5px 5px;
        margin-left: 43%;
        margin-right: 43%;
    }
    
</style>

<h2>Index</h2>

<p id="create">
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
              <div class="itens">  @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </div>
              <div class="itens"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </div>
              <div class="itens"> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</div>
</td>
        </tr>
    }

</table>
